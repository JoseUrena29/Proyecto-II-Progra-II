<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>productServlet</servlet-name>
        <servlet-class>products.productServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registroUsuario</servlet-name>
        <servlet-class>products.registroUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginUsuario</servlet-name>
        <servlet-class>products.loginUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Persona</servlet-name>
        <servlet-class>modelo.Persona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonaDAO</servlet-name>
        <servlet-class>modelo.PersonaDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>controlador.Controlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productServlet</servlet-name>
        <url-pattern>/productServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registroUsuario</servlet-name>
        <url-pattern>/registroUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginUsuario</servlet-name>
        <url-pattern>/loginUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Persona</servlet-name>
        <url-pattern>/Persona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonaDAO</servlet-name>
        <url-pattern>/PersonaDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
